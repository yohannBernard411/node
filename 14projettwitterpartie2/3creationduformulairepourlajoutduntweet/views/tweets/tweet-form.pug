extends ../layout

block content
  div(class="d-flex flex-row content mx-auto")
    div(class="profile-container")
      include ../includes/profile.pug
    div(class="flex-fill")
      form(class="card" method="post" action="/api/tweet")
        div(class="card-header") Ecrire un Tweet 
        div(class="card-body")
          div(class="form-group")
            textarea(class="form-control" name="content" placeholder="What is happening")
          div(class="w-100")
            input(type="submit" value="Send" class="btn btn-primary ml-auto d-block") 
